# vim: filetype=zsh

# Sets sane Zsh built-in environment options.
zmodule environment

# Load before environment to prevent startup from lagging sometimes.
# This happens because compinit needs to re-initialise
zmodule zsh-users/zsh-completions --fpath src
zmodule completion

# Applies correct bindkeys for input events.
zmodule input

# Utility aliases and functions. Adds colour to ls, grep and less.
zmodule utility

zmodule zsh-users/zsh-autosuggestions
zmodule zsh-users/zsh-history-substring-search
zmodule mafredri/zsh-async --name async
zmodule zdharma-continuum/fast-syntax-highlighting
zmodule hlissner/zsh-autopair
zmodule lewis6991/fancy-prompt
zmodule lewis6991/zsh-mouse
zmodule loiccoyle/zsh-github-copilot
